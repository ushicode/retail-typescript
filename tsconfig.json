{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,      
    "strict": true,        
    "skipLibCheck": true,                         
    "target": "es2016", 
    "module": "commonjs",      
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/**/*"
  ]
}