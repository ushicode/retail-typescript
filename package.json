{
  "name": "grc-retail-typescript",
  "version": "1.0.0-alpha.3",
  "description": "electron wrapper for GRC Retail App",
  "main": "./build/main.js",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && electron .",
    "dist:mac": "electron-builder -mw",
    "dist:win": "electron-builder --windows nsis:ia32"
  },
  "author": "Storm Games Ltd",
  "license": "SEE LICENSE IN <filename>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ushicode/retail-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/ushicode/retail-typescript/issues"
  },
  "homepage": "https://github.com/ushicode/retail-typescript#readme",
  "build": {
    "asar": false,
    "extends": null,
    "productName": "GRC GAME MENU",
    "appId": "co.uk.stormgt.grc",
    "mac": {
      "artifactName": "${productName}-${version}-osx.${ext}",
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "axios": "^1.4.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "typescript": "^5.1.6"
  }
}
