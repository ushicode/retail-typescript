{
  "name": "grc-retail-typescript",
  "version": "1.0.0-alpha.3",
  "description": "electron wrapper for GRC Retail App",
  "private": true,
  "publisher": "author",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "clean": "tsc --build --clean",
    "copy:dev": "rsync -av --exclude 'index.ts' --exclude '.env' --exclude '.git' --exclude 'node_modules' --exclude 'tsconfig.json' --exclude '.gitignore' --exclude 'README.md' --exclude 'build' --exclude 'dist' --exclude 'src'  ./ build",
    "copy:release": "rsync -av --exclude 'index.ts' --exclude '.env' --exclude '.git' --exclude '.gitignore' --exclude 'tsconfig.json' --exclude 'README.md' --exclude 'build' --exclude 'src'  ./ build",
    "start:dev": "concurrently \"rm -rf ./build && npm run build && npm run copy:dev && cd build && electron .\" ",
    "dist:mac": "concurrently \"rm -rf ./dist && rm -rf ./build && npm run build && npm run copy:release && cd build && electron-builder -m\" ",
    "dist:win": "concurrently \"rm -rf ./dist && rm -rf ./build && npm run build && npm run copy:release && cd build && electron-builder --windows nsis:ia32\" "
  },
  "author": "Storm Games Ltd",
  "license": "SEE LICENSE IN <filename>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ushicode/retail-typescript"
  },
  "bugs": {
    "url": "https://github.com/ushicode/retail-typescript/issues"
  },
  "homepage": "https://www.stormgamingtechnology.com",
  "build": {
    "asar": true,
    "productName": "GRC Game Menu",
    "appId": "co.uk.stormgt.grc",
    "copyright": "Copyright @2023 author",
    "mac": {
      "target": "dmg",
      "icon": "./assets/images/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/images/icon.ico"
    },
    "directories": {
      "output": "../dist"
    }
  },
  "dependencies": {
    "axios": "^1.4.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "concurrently": "^8.2.0",
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "electron-reloader": "^1.2.3",
    "typescript": "^5.1.6"
  }
}
